rules_version = '2';

// Craft rules based on data in your Firestore database
// allow write: if firestore.get(
//    /databases/(default)/documents/users/$(request.auth.uid)).data.isAdmin;
service firebase.storage {
  match /b/{bucket}/o {
    // Images uploads to /items/{userId}/{allPaths=**}
    match /items/{userId}/{allPaths=**} {
      // Allow read access to all users
      allow read: if true;
      
      // Allow write access only to authenticated users for their own items
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Profile images uploads to /profiles/{userId}/{allPaths=**}
    match /profiles/{userId}/{allPaths=**} {
      // Allow read access to all users
      allow read: if true;
      
      // Allow write access only to authenticated users for their own profile
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Default rule: deny all other access
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
